VERS="1.16.4"

if [[ -d "$HOME/opt/git-2.31.1/bin" ]]; then
  PATH_add "$HOME/opt/git-2.31.1/bin"
fi

GOPROXY="https://goproxy.io,direct"
GOPATH="$HOME/go/$VERS"
GOROOT="$HOME/go/roots/$VERS"
GOBIN="$HOME/go/bin"

PATH_add "$HOME/go/bin"
PATH_add "$GOPATH/bin"
PATH_add "$GOROOT/bin"

if [[ "$UID" -ne 0 ]]; then
  mkdir -p "$GOPATH"
fi


export GOPROXY GOPATH GOROOT GOBIN

PATH_add "$(pwd -P)/dist"

use nvm v12.18.2

# vim:ft=bash:ts=2:sw=2:et
