# shellcheck disable=SC1091
if [[ -f /opt/rh/llvm-toolset-9.0/enable ]]; then
  source /opt/rh/llvm-toolset-9.0/enable
fi

export DOCKER_BUILDKIT=1

VERS="1.16.4"
GOPROXY="https://goproxy.io,direct"
GOPATH="$HOME/go/$VERS"
GOROOT="$HOME/go/roots/$VERS"
GOBIN="$HOME/go/bin"

PATH_add "$HOME/go/bin"
PATH_add "$GOPATH/bin"
PATH_add "$GOROOT/bin"

if [[ "$UID" -ne 0 ]]; then
  mkdir -p "$GOPATH"
fi


export GOPROXY GOPATH GOROOT GOBIN


# vim:ft=bash:ts=2:sw=2:et
